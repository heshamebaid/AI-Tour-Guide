# LLM / OpenRouter
OPENROUTER_API_KEY=your_api_key_here
OPENROUTER_MODEL=meta-llama/llama-3-8b-instruct

# SerpAPI (for image search)
SERPAPI_API_KEY=your_serpapi_key_here

# Global
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Qdrant Vector Database Configuration
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_NAME=tour_guide_documents
# QDRANT_API_KEY=  # Optional: Uncomment for Qdrant Cloud

# Hybrid Search Configuration
ENABLE_HYBRID_SEARCH=true
DENSE_WEIGHT=0.5   # Weight for semantic/dense search (0.0-1.0)
SPARSE_WEIGHT=0.5  # Weight for keyword/sparse search (0.0-1.0)

# Paths
VECTORSTORE_PATH=./vectorstore
DOCUMENTS_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
